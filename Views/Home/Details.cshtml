@model Movie

<div class="row">
    <div class="col-md-3">
        @* @Html.Partial("_menu",Model.Categories) *@
           @await Component.InvokeAsync("CategoryMenu")
    </div>
    <div class="col-md-9">
        <div class="card mb-3">
            <div class="card-body">
                <div class="row no-gutter">

                    <div class="col-md-4">
                        <img src="~/img/@Model.ImageUrl" alt="@Model.Description" class="card-img">
                    </div>
                    <div class="col-md-8">

                        <h5 class="card-title">
                            <!--tag helper-->
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@Model.Id">@Model.Name</a>
                            <!--home/details/3-->
                        </h5>
                        <p class="card-text">
                            @Html.Raw(Model.Description)

                        </p>
                        <div class="card-text">
                            <small class="text-muted">3 days ago</small>
                        </div>

                    </div>

                </div>

            </div>





        </div>

    </div>
</div>